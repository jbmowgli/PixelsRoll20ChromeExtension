{
  "name": "Pixels Roll20 Integration",
  "version": "1.0.0",
  "description": "Connect Pixels dice to Roll20 via Bluetooth with advanced modifier support and seamless integration.",
  "manifest_version": 2,
  
  "permissions": [
    "activeTab",
    "storage",
    "*://roll20.net/*",
    "*://app.roll20.net/*"
  ],
  
  "background": {
    "scripts": ["src/common/browserAPI.js", "src/background/background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/images/logo-128.png",
      "32": "assets/images/logo-128.png",
      "48": "assets/images/logo-128.png",
      "128": "assets/images/logo-128.png"
    }
  },
  
  "icons": {
    "16": "assets/images/logo-128.png",
    "32": "assets/images/logo-128.png", 
    "48": "assets/images/logo-128.png",
    "128": "assets/images/logo-128.png"
  },
  
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  
  "content_scripts": [
    {
      "matches": ["https://roll20.net/editor/*", "https://app.roll20.net/editor/*"],
      "js": [
        "src/common/browserAPI.js",
        "src/content/theme-detector.js", 
        "src/content/modules/themeManager.js",
        "src/content/modules/dragHandler.js",
        "src/content/modules/positionManager.js",
        "src/content/modules/rowManager.js",
        "src/content/modifierBox.js", 
        "src/content/roll20.js"
      ]
    }
  ],
  
  "web_accessible_resources": [
    "assets/images/*"
  ],
  
  "author": "Enhanced by community contributors",
  "homepage_url": "https://github.com/[your-username]/PixelsRoll20ChromeExtension",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "pixels-roll20@extension.local",
      "strict_min_version": "78.0"
    }
  }
}
